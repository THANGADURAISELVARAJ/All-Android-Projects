<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme1" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:padding">8sp</item>
    </style>

    <style name="TextViewSmall" parent="TextViewStyle">

        <item name="android:textSize">13sp</item>
        <item name="android:padding">8sp</item>

    </style>

    <style name="TitleTextView" parent="TextViewStyle">
        <item name="android:fontFamily">@font/ostrichsans_bold</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">20sp</item>


    </style>

    <style name="TitleTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">10sp</item>

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="hintTextAppearance">@color/colorAccent</item>


    </style>


    <style name="TextInputEditText" parent="Widget.Design.TextInputLayout">

        <item name="hintTextAppearance">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">8sp</item>


    </style>

    <style name="EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="hintTextAppearance">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:layout_margin">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">8sp</item>

    </style>


    <style name="Botton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_marginLeft">100sp</item>
        <item name="android:layout_marginRight">100sp</item>
        <item name="android:layout_marginTop">18sp</item>
        <item name="android:layout_marginBottom">8sp</item>
    </style>

    <style name="ButtonNext" parent="Base.Widget.AppCompat.Button.Borderless">

        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:layout_marginLeft">2sp</item>
        <item name="android:layout_marginRight">2sp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:layout_marginBottom">2sp</item>
    </style>

    <style name="ImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_margin">20sp</item>


    </style>


</resources>
