<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextViewHeading" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">32sp</item>
        <item name="android:layout_marginEnd">32sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:textColor">@color/white
        </item>
    </style>
    <style name="TextViewTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">32sp</item>
        <item name="android:layout_marginEnd">32sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white
        </item>
    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout">

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">48sp</item>
        <item name="android:layout_marginEnd">48sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginBottom">8sp</item>


    </style>

    <style name="TextEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>


    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="TextViewSmall" parent="TextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">8sp</item>

    </style>


    <style name="Botton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:layout_marginLeft">100sp</item>
        <item name="android:layout_marginRight">100sp</item>
        <item name="android:layout_marginTop">18sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="ImageButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:layout_margin">20sp</item>


    </style>
</resources>
